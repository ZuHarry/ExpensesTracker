<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#4C6E2E"/> <!-- Darker shade for pressed state -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#5D8736"/> <!-- Theme color for normal state -->
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="#4C6E2E"/> <!-- Slightly darker border -->
        </shape>
    </item>
</selector>
